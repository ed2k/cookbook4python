// redraw whokwerts hand after removing the indicated card
proc redohand {who suit card} {
    global curhandx curhandy hands handsx handsy

    regsub -nocase $card [set o $hands($who,$suit)] {} n
    // catch {talkmsg KWOTEredohand $who $suit $card ($o => $n)KWOTE}
    if [string compare $n $o] {
QTABQ erasecardifnotinmatrix $suit $card
QTABQ if {$who == KWOTElhoKWOTE || $who == KWOTErhoKWOTE} {
QTABQ     // only redraw the suit affected if lho or rho
QTABQ     set curhandx $handsx($who,$suit)
QTABQ     set curhandy $handsy($who,$suit)
QTABQ     suit $who $n $suit
QTABQ } else {
QTABQ     set hands($who,$suit) $n
QTABQ     hand $who \
QTABQ QTABQ     $hands($who,s) $hands($who,h) $hands($who,d) $hands($who,c)
QTABQ }
    }
}

// Restore any and all purple cards to their normal color.
proc tprestore {} {
    global canv purple
    set c [matrix_widget]
    foreach t [array names purple] {
QTABQ unset purple($t)
QTABQ catch {talkmsg KWOTERestoring color to $tKWOTE}
QTABQ $c itemconfig $t -foreground $canv([matrix_widget],fg_,$t)
    }
}

proc tpcard {what} {
    global canv purple
    set c [matrix_widget]
    set t $canv([matrix_widget],$what)
    if ![info exists purple($t)] {
QTABQ set purple($t) 1
QTABQ $c itemconfig $t -foreground purple
QTABQ lappend canv([matrix_widget],maybepass) $t
QTABQ // talkmsg KWOTEtpcard: $what set to purpleKWOTE
    } else {
QTABQ unset purple($t)
QTABQ $c itemconfig $t -foreground $canv([matrix_widget],fg_,$t)
QTABQ // talkmsg KWOTEtpcard: $what set to $canv([matrix_widget],fg_,$t)KWOTE
    }
}

proc suit {who cards suit} {
    global removecard togglepassedaction cardgap curhandx curhandy \
QTABQ     lhomaxx rhomaxx cardwidth hands handsx handsy canv

    // talkmsg KWOTEsuit $who $cards $suitKWOTE
    set hands($who,$suit) $cards
    set handsx($who,$suit) $curhandx
    set handsy($who,$suit) $curhandy
    set l [string length $cards]
    set spacing $cardgap
    set xmin [expr $cardwidth / 2]
    if {$who == KWOTElhoKWOTE || $who == KWOTErhoKWOTE} {
QTABQ if {$l > 6} {incr spacing -2}
QTABQ if {$l > 7} {incr spacing -3}
QTABQ if {$l > 8} {incr spacing -2}
QTABQ if {$l > 9} {incr spacing -3}
QTABQ if {$spacing < 10} {set spacing 10}
QTABQ if {$who == KWOTElhoKWOTE} {set xmax $lhomaxx([matrix_widget])} {set xmax $rhomaxx([matrix_widget])}
QTABQ while {[expr $curhandx + $cardwidth / 2 + ($l - 1) * $spacing + 3] \
QTABQ QTABQ > $xmax} {
QTABQ     if {$curhandx > $xmin} {incr curhandx -3} {incr spacing -1}
QTABQ }
    }
    if {$curhandx < $xmin} {set curhandx xmin}
    for {set i 0} {$i < $l} {incr i} {
QTABQ set card [string index $cards $i]
QTABQ drawcard $suit $card $curhandx $curhandy
QTABQ set removecard([string toupper $suit$card]) KWOTEredohand $who $suit $cardKWOTE
QTABQ set togglepassedaction([string toupper $suit$card]) KWOTEtpcard $card$suitKWOTE
QTABQ set canv([matrix_widget],dealt,[string tolower $suit$card]) 1
QTABQ incr curhandx $spacing
    }
}


proc hand {who s h d c} {
    global handx handy curhandx curhandy suitgap cardgap hands vgap \
QTABQ     ourcardgap theircardgap

    // catch {talkmsg KWOTEhand $who $s $h $d $cKWOTE}
    if {$who == KWOTEselfKWOTE || $who == KWOTEpardKWOTE} {
QTABQ set cardgap $ourcardgap
QTABQ set width [expr ([string length $s] + [string length $h] + [string length $d] + [string length $c]) * $cardgap + (([string length $s] > 0) + ([string length $h] > 0) + ([string length $d] > 0)) * $suitgap]
QTABQ set curhandx [expr $handx([matrix_widget],$who) - round(0.5 * $width)]
QTABQ set curhandy $handy([matrix_widget],$who)

QTABQ suit $who $s s
QTABQ if {$s != KWOTEKWOTE} {incr curhandx $suitgap}
QTABQ suit $who $h h
QTABQ if {$h != KWOTEKWOTE} {incr curhandx $suitgap}
QTABQ suit $who $d d
QTABQ if {$d != KWOTEKWOTE} {incr curhandx $suitgap}
QTABQ suit $who $c c
    } else {
QTABQ set cardgap $theircardgap
QTABQ set curhandx $handx([matrix_widget],$who)
QTABQ set curhandy $handy([matrix_widget],$who)
QTABQ suit $who $s s
QTABQ incr curhandy $vgap
QTABQ set curhandx $handx([matrix_widget],$who)
QTABQ incr curhandx 10
QTABQ suit $who $h h
QTABQ incr curhandy $vgap
QTABQ set curhandx $handx([matrix_widget],$who)
QTABQ suit $who $d d
QTABQ incr curhandy $vgap
QTABQ set curhandx $handx([matrix_widget],$who)
QTABQ incr curhandx 10
QTABQ suit $who $c c
    }
}

proc fulldeal_erase_straglers {} {
    global canv
    foreach suit {s h d c} {
QTABQ foreach card {a k q j t 9 8 7 6 5 4 3 2} {
QTABQ     if !$canv([matrix_widget],dealt,$suit$card) { erasecardifnotinmatrix $suit $card }
QTABQ }
    }
}

// draw the given cards and erase any others
proc fulldeal {s h d c LHOs LHOh LHOd LHOc \
QTABQ QTABQ    Ps Ph Pd Pc RHOs RHOh RHOd RHOc} {
    global canv

    // catch {talkmsg KWOTEfull $s $h $d $c . $LHOs $LHOh $LHOd $LHOc . $Ps $Ph $Pd $Pc . $RHOs $RHOh $RHOd $RHOcKWOTE}

    foreach suit {s h d c} {
QTABQ foreach card {a k q j t 9 8 7 6 5 4 3 2} {
QTABQ     set canv([matrix_widget],dealt,$suit$card) 0
QTABQ }
    }

    tprestore


    if {KWOTE$Ps$Ph$Pd$Pc$LHOs$LHOh$LHOd$LHOc$RHOs$RHOh$RHOd$RHOcKWOTE != KWOTEKWOTE} {
QTABQ // common case
QTABQ hand self $s $h $d $c
QTABQ hand pard $Ps $Ph $Pd $Pc
QTABQ hand lho $LHOs $LHOh $LHOd $LHOc
QTABQ hand rho $RHOs $RHOh $RHOd $RHOc
QTABQ fulldeal_erase_straglers
    } else {
QTABQ // Special case: a fulldeal only showing my cards shouldnkwertt
QTABQ // affect whether the matrix is showing.
QTABQ global matrix_showing
QTABQ set z $matrix_showing([matrix_widget])
QTABQ hand self $s $h $d $c
QTABQ hand pard $Ps $Ph $Pd $Pc
QTABQ hand lho $LHOs $LHOh $LHOd $LHOc
QTABQ hand rho $RHOs $RHOh $RHOd $RHOc
QTABQ fulldeal_erase_straglers
QTABQ showMatrix $z // restore state of matrix to what it was initially
    }
}

