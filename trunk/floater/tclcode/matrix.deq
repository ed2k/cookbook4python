}    

proc matrixtext {player s {options {}}} {
    global canv

    eval KWOTE[matrix_widget] itemconfigure $canv([matrix_widget],matrixtext,$player) -text \{$s\} \
QTABQ     $optionsKWOTE
}

proc showplay {player suit card} {
    global canv

    if {$suit == KWOTE?KWOTE} {
QTABQ matrixtext $player KWOTE?KWOTE
    } else {
QTABQ removecardfromhand $suit $card
QTABQ erasebidplay $player
QTABQ matrix_showcards 1 $player
QTABQ drawcard $suit $card $canv([matrix_widget],mx,$player) $canv([matrix_widget],my,$player)
QTABQ set canv([matrix_widget],matrixcard,$player) KWOTE$suit $cardKWOTE
    }
}

proc showbid {player level strain} {
    global canv

    matrix_showcards 0 $player
    drawbid [matrix_widget].f$player $level $strain
}

// Erase a bid or play from the matrix
// who should be lho, rho, pard, self, or all
proc erasebidplay {who} {
    global tricktimeOK

    if {!$tricktimeOK} {
QTABQ after 100 erasebidplay who
    }

    if {$who == KWOTEallKWOTE} {
QTABQ global needtoerase

QTABQ set needtoerase 0
QTABQ erasebidplay lho
QTABQ erasebidplay rho
QTABQ erasebidplay pard
QTABQ erasebidplay self
    } else {
QTABQ global canv
QTABQ matrixtext $who KWOTEKWOTE
QTABQ if [info exists canv([matrix_widget],matrixcard,$who)] {
QTABQ     eval KWOTEerasecard $canv([matrix_widget],matrixcard,$who)KWOTE
QTABQ     unset canv([matrix_widget],matrixcard,$who)
QTABQ }
QTABQ matrix_showcards 1 $who
    }
}


proc showMatrix {b} { 
    global matrix_showing canv

    set c [matrix_widget]

    // catch {talkmsg KWOTEshowMatrix $bKWOTE}
    if {$b == $matrix_showing($c)} return

    if [set matrix_showing($c) $b] {
QTABQ $c move all 0 [expr - $canv($c,YMatrixHide)]
QTABQ $c configure -height $canv($c,height)
    } else {
QTABQ $c move all 0 $canv($c,YMatrixHide)
QTABQ $c configure -height $canv($c,matrixHiddenHeight)
    }
}



// copy cards over from the current matrix to a new one
proc matrix_copycards {new_toplevel} {
    global canv hands toplevel

    // temporarily set toplevel
    set old_toplevel $toplevel
    set toplevel $new_toplevel

    // do the hands
    foreach who {lho rho self pard} {
QTABQ hand $who $hands($who,s) $hands($who,h) $hands($who,d) $hands($who,c) 
    }


    // copy over the played cards
    foreach p {lho rho self pard} {
QTABQ set canv($new_toplevel,matrixcard,$p) canv($old_toplevel,matrixcard,$p)
    }
    


    set toplevel $old_toplevel
}

